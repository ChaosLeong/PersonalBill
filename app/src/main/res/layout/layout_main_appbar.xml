<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/header_text_padding"
        android:paddingEnd="@dimen/header_text_padding"
        android:paddingStart="@dimen/header_text_padding"
        android:weightSum="3">

        <TextView
            android:id="@+id/dateText"
            style="@style/TitleTextItem"
            android:layout_marginEnd="@dimen/header_text_padding" />

        <TextView
            android:id="@+id/incomeText"
            style="@style/TitleTextItem"
            android:layout_marginEnd="@dimen/header_text_padding" />

        <TextView
            android:id="@+id/expenseText"
            style="@style/TitleTextItem" />
    </LinearLayout>
</android.support.design.widget.AppBarLayout>